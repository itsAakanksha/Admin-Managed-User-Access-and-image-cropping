<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .profile-container {
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile-para {
            max-width: 300px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="login-container">
                <div class="login-header">
                    <h3 class="mb-3">Upload Image</h3>
                </div>
                <form action="/user" method="POST" enctype="multipart/form-data" id="uploadForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="photo" class="form-label">Photo</label>
                        <input type="file" class="form-control" id="imageInput" name="image" accept="image/*" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-block">Upload</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Profile display section -->
        <div class="col-md-6">
            <div class="profile-container d-none" id="profileContainer">
                <img src="<%= profileimage ? profileimage : '' %>" alt="Profile Image" class="profile-image img-fluid" id="profileImage">
                <h4 id="profileName" class="fw-bold"><%= name ? name : '' %></h4>
                <p class="mx-auto <%= isverify ? 'text-success' : 'text-danger' %>">
                    <%= isverify ? "You are verified" : "You are not verified" %>
                </p>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-outline-primary position-absolute top-0 end-0 m-4" id="viewButton">View</button>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>
    // Function to handle the view button click
    document.getElementById('viewButton').addEventListener('click', function () {
        var profileContainer = document.getElementById('profileContainer');
        var viewButton = document.getElementById('viewButton');

        // Toggle the display of the profile container
        profileContainer.classList.toggle('d-none');

        // Update the button content based on the current state
        if (profileContainer.classList.contains('d-none')) {
            viewButton.textContent = 'View';
        } else {
            viewButton.textContent = 'Close';
        }

        // Get values from the form
        var name = document.getElementById('name').value;
        var imageInput = document.getElementById('imageInput');
        var image = URL.createObjectURL(imageInput.files[0]);

        // Update the profile display
        document.getElementById('profileName').innerText = name;
        document.getElementById('profileImage').src = image;
        document.getElementById('profilePara').innerText = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.";
    });
</script>

</body>
</html>
