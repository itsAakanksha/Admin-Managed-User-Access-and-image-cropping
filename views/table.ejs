<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>table</title>
    <link rel="stylesheet" href="../public/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
      /* Custom CSS for small images */
      .small-image {
        max-width: 50px; /* Set your preferred width */
        max-height: 50px; /* Set your preferred height */
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="container mt-4">
        <h1 class="mb-4">User Table</h1>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Name</th>
              <th>Photo</th>
              <th class="table-action">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (user.length > 0) { %>
              <% for (let i = 0; i < user.length; i++) { %>
                <tr>
                  <td><%= user[i].userId %></td>
                  <td><%= user[i].name ? user[i].name : '-' %></td>
                  <td><img src="<%= user[i].image %>" alt="image" class="small-image"></td>
                  <td>
                    <a href="/admin/allusers/delete?id=<%=user[i].userId %>"><button class="btn btn-primary">Delete</button></a>
                    <% if (!user[i].isVerified) { %>
                      <a href="/admin/allusers/verify?id=<%=user[i].userId %>"><button class="btn btn-primary">Done</button></a>
                    <% } %>
                  </td>
                </tr>
              <% } %>
            <% } else { %>
              <tr>
                <td colspan="4">No users found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="d-grid position-absolute top-0 end-0 m-4">
        <a href="/admin">
          <button type="button" class="btn btn-outline-primary">Back</button>
        </a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
